{
  "defaultExtension": "ts",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "es2018"],
    "module": "es2020",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./js/types",
    "paths": {
      "*": ["./js/types/*", "*"]
    },
    // "baseUrl": "./",
    // "paths": {"*": ["./js/types"]},
    "strict": true,
    "target": "es2018"
  },
  "exclude": [
    "node_modules"
  ],
  // "include": [
  //   "js/types"
  // ]
}
